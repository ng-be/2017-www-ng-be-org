doctype html
html(ng-app="app")
    head
        meta(charset="utf-8")

        //- Display environment when not in production
        if environment === "production"
            title NG-BE 2017 - Belgium's Angular conference
        else
            title= '[' + environment + '] - NG-BE 2017 - Belgium\'s Angular conference'

        base(href="/")
