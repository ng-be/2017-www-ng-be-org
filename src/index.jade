        meta(name="theme-color", content="#ffffff")

        meta(name="twitter:title", content="NG-BE 2017 - Belgium's Angular conference")
        meta(name="twitter:description", content="Learn about the latest Angular developments and meet with experts from the Angular community while enjoying delicious foods and drinks")
        meta(name="twitter:description", content="Learn about the latest Angular developments and meet with experts from the Angular community while enjoying delicious foods and drinks")
        meta(name="twitter:image", content="/assets/img/ngbeshare.jpg")

        meta(property="og:title", content="NG-BE 2017 - Belgium's Angular conference")
        meta(property="og:description", content="Learn about the latest Angular developments and meet with experts from the Angular community while enjoying delicious foods and drinks")
        meta(property="og:image", content="/assets/img/ngbeshare.jpg")
        meta(property="og:image:height", content="630")
        meta(property="og:image:width", content="1200")

        //- Non production environment
        //- Load jspm loader and configuration
        if environment !== "production"
            script(src="_jspm_packages/system.js")
            script(src="config.js")
            //- Bootstrap the application
            script.
                System.import('app');

        //- Production environment
        //- Load self executing bundle
        if environment === "production"
            script(src="build.js")

        script.
            if ('serviceWorker' in navigator) {
                window.addEventListener('load', function () {
                    navigator.serviceWorker.register('/service-worker.js', {scope: '/'}).then(function (registration) {
                        // Registration was successful
                        console.log('ServiceWorker registration successful with scope: ', registration.scope);
                    }).catch(function (err) {
                        // registration failed :(
                        console.log('ServiceWorker registration failed: ', err);
                    });
                });
            }

    body

        // include components/ribbon/ribbon

        include components/site-header/site-header

        main

            div(ui-view="content")

        include components/site-footer/site-footer

